<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_1"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp">

        <!-- Text ở giữa -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Issue"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/btn_Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:id="@+id/task"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btn_chooseProject"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_chooseProject"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/name_chooseProject"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_keyboard_arrow_down"
                        android:background="@color/white"
                        android:layout_gravity="center"
                        app:tint="@color/black" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/arrowRight"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:id="@+id/btn_chooseTask"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_chooseTask"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/name_chooseTask"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/text_task"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_keyboard_arrow_down"
                        android:background="@color/white"
                        app:tint="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nameIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@id/task"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edtNameIssue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:hint="Enter name Issue"/>
                <ImageButton
                    android:id="@+id/imgBtnUser"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_background"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/issueDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_background"
                android:layout_below="@id/nameIssue"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/btnDesIssue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="5dp"
                            android:paddingStart="5dp"
                            android:text="@string/description"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_keyboard_arrow_right"
                            android:background="@color/white"
                            app:tint="@color/black" />
                    </LinearLayout>
                </FrameLayout>

                <EditText
                    android:id="@+id/textContentDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:hint="Add a description..."
                    android:inputType="textMultiLine"
                    android:text=""
                    android:textSize="13sp"
                    android:gravity="start" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_background"
                android:layout_below="@id/issueDescription"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="5dp"
                            android:paddingStart="5dp"
                            android:text="Attachments"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_keyboard_arrow_right"
                            android:background="@color/white"
                            app:tint="@color/black" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/add_attachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingLeft="10dp"
                    android:text="+    Add attachment"
                    android:textColor="@color/blue"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:gravity="start"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/issueFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_background"
                android:layout_below="@id/attachment"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/btnFieldIssue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:paddingStart="5dp"
                        android:text="More fields"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="start"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_keyboard_arrow_right"
                        android:background="@color/white"
                        app:tint="@color/black" />
                </LinearLayout>
<!--                <TextView-->
<!--                    android:id="@+id/textContentFields"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="20dp"-->
<!--                    android:layout_marginStart="5dp"-->
<!--                    android:textSize="13sp"-->
<!--                    android:text="Assignee, Reporter"/>-->
                <LinearLayout
                    android:id="@+id/contentFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/btn_Assignee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- TextView cho tên task -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginStart="5dp"
                            android:text="Assignee"
                            android:textSize="13sp"
                            android:textColor="@color/gray_3"
                            android:paddingBottom="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/avt_Assignee"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="start|center_vertical" />

                            <TextView
                                android:id="@+id/name_Assignee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|start"
                                android:layout_marginStart="10dp"
                                android:text="name"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:paddingBottom="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_Reporter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- TextView cho tên task -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginStart="5dp"
                            android:text="Reporter"
                            android:textSize="13sp"
                            android:textColor="@color/gray_3"
                            android:paddingBottom="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/avt_Reporter"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="start|center_vertical" />

                            <TextView
                                android:id="@+id/name_Reporter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|start"
                                android:layout_marginStart="10dp"
                                android:text="name"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:paddingBottom="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
