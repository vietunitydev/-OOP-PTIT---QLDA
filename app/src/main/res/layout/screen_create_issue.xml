<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/rounded_background_gainsboro"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/headerCreateIssue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/gains_boro"
                android:gravity="start"
                android:text="@string/cancel"
                android:textColor="@color/blue_2"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtCreateIssue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:backgroundTint="@color/gains_boro"
                android:gravity="center"
                android:text="@string/create_issue"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnCreateIssue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/gains_boro"
                android:gravity="end"
                android:text="@string/create"
                android:textColor="@color/blue_2"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/task"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/headerCreateIssue"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/QLDA"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <Button
                    android:id="@+id/QLDA_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_background">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_missile"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/QLDA_Text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:text="@string/text_QLDA"
                        android:textSize="17sp"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:id="@+id/QLDA_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_keyboard_arrow_down"
                        android:background="@color/white"
                        app:tint="@color/black" />
                </LinearLayout>
            </FrameLayout>
            <ImageView
                android:id="@+id/arrowRight"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/black"
                android:scaleType="centerCrop"
                />
            <FrameLayout
                android:id="@+id/Task"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/rounded_background">
                <Button
                    android:id="@+id/Task_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_background">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_check"
                        android:background="@color/blue_2"
                        app:tint="@color/white"/>
                    <TextView
                        android:id="@+id/Task_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:text="@string/text_task"
                        android:textSize="17sp"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:id="@+id/Task_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_keyboard_arrow_down"
                        android:background="@color/white"
                        app:tint="@color/black"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/abcs"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/task">
            <TextView
                android:id="@+id/txtDateJob"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="[14/11/2024]"
                android:textSize="25sp"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/txtNameJob"
                android:layout_width="0dp"
                android:layout_marginStart="5dp"
                android:layout_height="match_parent"
                android:text="abcs"
                android:layout_weight="1"
                android:textSize="25sp"
                android:gravity="start"/>

            <ImageButton
                android:id="@+id/imgBtnUser"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_user"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_background_gainsboro"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_background"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/abcs">
            <LinearLayout
                android:id="@+id/headerDescription"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:text="@string/description"
                    android:textSize="23sp"/>
                <ImageButton
                    android:id="@+id/btnShowDescription"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_keyboard_arrow_down"
                    android:scaleType="centerCrop"
                    app:tint="@color/gray3"
                    android:background="@drawable/rounded_background"/>
            </LinearLayout>
            <EditText
                android:id="@+id/edtAddDescription"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_background"
                android:hint="@string/add_description"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>