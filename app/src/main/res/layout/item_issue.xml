<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_Issue_img"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/blue_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/item_Issue_txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="8dp">

            <ImageView
                android:id="@+id/avt_priority"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/avt_medium"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/avt_assignee"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/avt_medium"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/item_Issue_Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="1dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/blue_1"
                android:textColor="@color/blue"
                android:text="TO DO"
                android:textSize="13sp"
                tools:ignore="RtlSymmetry"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_horizontal_line"/>

    </LinearLayout>

</LinearLayout>
