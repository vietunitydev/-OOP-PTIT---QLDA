<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainIssue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gains_boro"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/headerIssue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="8dp">

            <!-- FrameLayout chứa ImageView và Button -->
            <FrameLayout
                android:id="@+id/btn_info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/img_show_user_info"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btn_Search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/btn_info"
                android:layout_toStartOf="@id/btnAdd">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Issues"
                    android:textSize="18sp"
                    android:textColor="#000000" />

<!--                <ImageView-->
<!--                    android:layout_width="25dp"-->
<!--                    android:layout_height="25dp"-->
<!--                    android:background="@drawable/ic_search"-->
<!--                    android:backgroundTint="@color/black"-->
<!--                    android:padding="0dp"-->
<!--                    android:minWidth="40dp"-->
<!--                    android:minHeight="40dp"-->
<!--                    android:elevation="4dp"-->
<!--                    android:layout_gravity="center|end"-->
<!--                    tools:ignore="RelativeOverlap" />-->
            </FrameLayout>


            <!-- Button Add -->
            <ImageView
                android:id="@+id/btnAdd"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_plus"
                android:elevation="4dp"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/searchSelection"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/headerIssue">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_search"
                android:backgroundTint="@color/black"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/project"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Dự án"
                android:gravity="center"
                android:textSize="13sp"
                android:paddingHorizontal="8dp"/>
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Loại"
                android:gravity="center"
                android:textSize="13sp"
                android:paddingHorizontal="8dp"/>
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Tình trạng"
                android:gravity="center"
                android:textSize="13sp"
                android:paddingHorizontal="8dp"/>
            <TextView
                android:id="@+id/priority"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Priority"
                android:gravity="center"
                android:textSize="13sp"
                android:paddingHorizontal="8dp"/>
<!--            <TextView-->
<!--                android:id="@+id/assignee"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="30dp"-->
<!--                android:text="Assignee"-->
<!--                android:gravity="center"-->
<!--                android:textSize="13sp"-->
<!--                android:paddingHorizontal="8dp"/>-->

<!--            <TextView-->
<!--                android:id="@+id/reporter"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="30dp"-->
<!--                android:text="Reporter"-->
<!--                android:gravity="center"-->
<!--                android:textSize="13sp"-->
<!--                android:paddingHorizontal="8dp"/>-->

            <TextView
                android:id="@+id/remove"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Clear"
                android:textColor="@color/red_3"
                android:gravity="center"
                android:textSize="13sp"
                android:paddingHorizontal="8dp"/>

        </LinearLayout>

        <ScrollView
            android:id="@+id/bodyIssue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_background_gainsboro"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/searchSelection">

            <LinearLayout
                android:id="@+id/issueWithinTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
