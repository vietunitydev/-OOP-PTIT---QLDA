<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gains_boro"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headerIssue"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/gains_boro"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_left"
            android:background="@color/gains_boro"
            android:scaleType="centerCrop"
            app:tint="@color/blue_2"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/imgBtnDotIssue"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_dots_horiz"
            android:background="@color/gains_boro"
            android:scaleType="centerCrop"
            app:tint="@color/blue_2"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerIssue"
        android:layout_above="@id/bottom_edit_comment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/nameQLDA"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/headerIssue">
                <ImageView
                    android:id="@+id/item_Issue_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_check"
                    android:background="@color/blue_2"
                    app:tint="@color/white"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/txtNameQLDA"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nameIssue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/nameQLDA"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edtNameIssue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:hint="Enter name Issue"/>
                <ImageButton
                    android:id="@+id/imgBtnUser"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_user"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_background"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/statusIssue"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/nameIssue"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnStatusIssue"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"/>
                    <LinearLayout
                        android:id="@+id/wrapper_btnStatus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@color/green_low">

                        <TextView
                            android:id="@+id/txtStatusIssue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/status_QLDA"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/blue"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_keyboard_arrow_down"
                            android:background="@android:color/transparent"
                            app:tint="@color/black" />
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/issueDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_background"
                app:layout_constraintTop_toBottomOf="@id/statusIssue"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnDesIssue"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:backgroundTint="@color/white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="5dp"
                            android:paddingStart="5dp"
                            android:text="@string/description"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_keyboard_arrow_right"
                            android:background="@color/white"
                            app:tint="@color/black" />
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/textContentDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="@string/description"
                    android:textSize="13sp"
                    android:gravity="start" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/issueDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_background"
                app:layout_constraintTop_toBottomOf="@id/issueDescription"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnDetailIssue"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:backgroundTint="@color/white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingTop="5dp"
                                android:paddingStart="5dp"
                                android:text="Details"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="start"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/ic_keyboard_arrow_right"
                                android:background="@color/white"
                                app:tint="@color/black" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
                <TextView
                    android:id="@+id/textContentDetails"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:textSize="13sp"
                    android:text="Issue Type, Assignee, Labels, Team and Reporter"/>
                <LinearLayout
                    android:id="@+id/contentDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- TextView cho tên task -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginStart="5dp"
                            android:text="Issue Type"
                            android:textSize="13sp"
                            android:textColor="@color/gray_3"
                            android:paddingBottom="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/img_task_type"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="start|center_vertical" />

                            <TextView
                                android:id="@+id/task_typeName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|start"
                                android:layout_marginStart="10dp"
                                android:text="Task"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:paddingBottom="5dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- TextView cho tên task -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginStart="5dp"
                            android:text="Assignee"
                            android:textSize="13sp"
                            android:textColor="@color/gray_3"
                            android:paddingBottom="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/avatar_assignee"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="start|center_vertical" />

                            <TextView
                                android:id="@+id/name_assignee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|start"
                                android:layout_marginStart="10dp"
                                android:text="Viet"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:paddingBottom="5dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- TextView cho tên task -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginStart="5dp"
                            android:text="Reporter"
                            android:textSize="13sp"
                            android:textColor="@color/gray_3"
                            android:paddingBottom="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/avatar_reporter"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="start|center_vertical" />

                            <TextView
                                android:id="@+id/name_reporter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|start"
                                android:layout_marginStart="10dp"
                                android:text="Viet"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:paddingBottom="5dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/issueFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_background"
                app:layout_constraintTop_toBottomOf="@id/issueDetail"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnFieldIssue"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:backgroundTint="@color/white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingTop="5dp"
                                android:paddingStart="5dp"
                                android:text="More fields"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="start"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/ic_keyboard_arrow_right"
                                android:background="@color/white"
                                app:tint="@color/black" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
                <TextView
                    android:id="@+id/textContentFields"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:textSize="13sp"
                    android:text="Project, Created, Updated"/>
                <LinearLayout
                    android:id="@+id/contentFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- TextView cho tên task -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginStart="5dp"
                            android:text="Issue Type"
                            android:textSize="13sp"
                            android:textColor="@color/gray_3"
                            android:paddingBottom="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/avt_project"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="start|center_vertical" />

                            <TextView
                                android:id="@+id/projectName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|start"
                                android:layout_marginStart="10dp"
                                android:text="Task"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:paddingBottom="5dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- TextView cho tên task -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginStart="5dp"
                            android:text="Created"
                            android:textSize="13sp"
                            android:textColor="@color/gray_3"
                            android:paddingBottom="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/text_created"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|start"
                                android:layout_marginStart="5dp"
                                android:text="Viet"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:paddingBottom="5dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- TextView cho tên task -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginStart="5dp"
                            android:text="Updated"
                            android:textSize="13sp"
                            android:textColor="@color/gray_3"
                            android:paddingBottom="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/text_updated"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|start"
                                android:layout_marginStart="5dp"
                                android:text="Viet"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:paddingBottom="5dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/issueFields"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/issueFields"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:paddingStart="17dp"
                        android:gravity="center_vertical|start"
                        android:text="Activity" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:paddingEnd="17dp"
                        android:textColor="@color/blue"
                        android:gravity="center_vertical|end"
                        android:text="Comments" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/issueFields"
                    android:orientation="vertical">

<!--                    <include layout="@layout/item_comment"/>-->
<!--                    <include layout="@layout/item_comment"/>-->
<!--                    <include layout="@layout/item_comment"/>-->
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_edit_comment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="@drawable/ic_avatar_male"
            android:importantForAccessibility="no"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp" />

        <EditText
            android:id="@+id/edit_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:hint="@string/text_hint_comment"
            android:inputType="textLongMessage"
            android:textSize="15sp"
            android:background="@drawable/border_edit_text"
            android:paddingStart="8dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:importantForAutofill="no" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="0dp"
            android:background="@drawable/ic_message"
            android:importantForAccessibility="no"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp" />
    </LinearLayout>

</RelativeLayout>