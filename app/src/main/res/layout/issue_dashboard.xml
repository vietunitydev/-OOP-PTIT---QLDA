<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/mainIssue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gains_boro"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/headerInssue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                android:id="@+id/btn_show_user_info"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@drawable/ic_user"
                android:contentDescription="@string/issue_user"/>
            <LinearLayout
                android:id="@+id/issue"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/txtInssue"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/issues"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:layout_constraintEnd_toStartOf="@id/imgBtnSearch"/>
                <EditText
                    android:id="@+id/edtSearch"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:hint="@string/issue_search"
                    android:inputType="text"
                    android:background="@color/white"
                    />
                <ImageButton
                    android:id="@+id/imgBtnSearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_search"
                    android:background="@color/gains_boro"
                    android:scaleType="centerCrop"
                    app:tint="@color/blue_2"
                    app:layout_constraintStart_toEndOf="@id/txtInssue"
                    android:contentDescription="@string/issue_search_button_description"
                    />
            </LinearLayout>
            <ImageButton
                android:id="@+id/imgBtnAddIssues"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_add"
                android:background="@color/gains_boro"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                app:tint="@color/blue_2"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/bodyIssue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rounded_background_gainsboro"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/headerInssue">
            <LinearLayout
                android:id="@+id/issueWithinTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>